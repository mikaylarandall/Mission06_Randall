@model MovieTemplate
<!-- this page confirms that the individual would like to delete the movie selected-->

<h2>Confirm Deletion</h2>
<h3>@Model.Title</h3>
<form method="post">
    <input type="hidden" asp-for="MovieId" />
    <br /><br />
    <button class="btn btn-danger" type="submit">Delete</button>
    <a class="btn btn-info" asp-controller="Home" asp-action="ViewMovies">Cancel</a>
</form>
